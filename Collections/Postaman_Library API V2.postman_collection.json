    {
      "name": "skill check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.response.json()",
              "pm.collectionVariables.get(\"actorName\")",
              "pm.collectionVariables.set(\"favoriteActor\", \"actorName\")"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
      ],
      "request": {
        "auth": {
          "type": "apikey",
          "apikey": [
            {
              "key": "value",
              "value": "skillcheck",
              "type": "string"
            },
            {
              "key": "key",
              "value": "student-expert",
              "type": "string"
            }
          ]
        },
        "method": "POST",
